[sqlfluff]
templater = dbt
exclude_rules = L031,L034
dialect = postgres


[sqlfluff:rules]
tab_space_size = 2
max_line_length = 100
indent_unit = space

[sqlfluff:rules:L010]
capitalisation_policy = lower

[sqlfluff:templater:jinja]
apply_dbt_builtins = true

[sqlfluff:layout:type:comma]
spacing_before = touch
line_position = leading